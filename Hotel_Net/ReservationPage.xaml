<Window x:Class="Hotel.PL.ReservationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.PL"
        mc:Ignorable="d"
        Title="ReservationPage" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">
        <DataGrid x:Name ="ReservationDataGrid" HorizontalAlignment="Left" Height="316" Margin="61,70,0,0" VerticalAlignment="Top" Width="463" IsReadOnly="True"/>
        <Button Content="Добавить" FontSize="30" HorizontalAlignment="Left" Height="51" Margin="554,128,0,0" VerticalAlignment="Top" Width="222" FontWeight="Bold" BorderBrush="#FFFFFDFD" Background="#FFEAF196" Click="ButtonAdd_Click"/>
        <Button Content="Изменить" FontSize="30" HorizontalAlignment="Left" Height="51" Margin="554,204,0,0" VerticalAlignment="Top" Width="222" FontWeight="Bold" BorderBrush="#FFFFFDFD" Background="#FFEAF196" Click="ButtonUpdate_Click"/>
        <Button Content="Удалить" FontSize="30" HorizontalAlignment="Left" Height="51" Margin="554,282,0,0" VerticalAlignment="Top" Width="222" FontWeight="Bold" BorderBrush="#FFFFFDFD" Background="#FFEAF196" Click="ButtonDelete_Click"/>

    </Grid>
</Window>
